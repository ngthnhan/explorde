<%= form_for @post, url: posts_path, html: { multipart: true } do |f| %>
  <% if @post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
      <% @post.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :resolution_level, "Level of Details" %><br>
    <%= f.number_field :resolution_level, in: 4..7 %>
  </div>
	<div class="field">
    <%= f.label :image %><br>
    <%= f.file_field :image %>
  </div>
	<div class="actions">
    <%= f.submit %>
  </div>
<% end %>
